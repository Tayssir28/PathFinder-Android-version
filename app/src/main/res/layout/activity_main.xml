<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="437dp"
        android:layout_height="762dp"
        app:srcCompat="@drawable/bg"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="175dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="4dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="297dp"
        android:layout_height="54dp"
        android:text="Traveling - it leaves you speechless, then turns you into a storyteller.  "
        android:textAlignment="center"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="154dp"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/linkOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agency"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/linkTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/GetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get started"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="208dp"/>

    <TextView
        android:id="@+id/agency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agency"
        android:autoLink="web"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/GetStarted"
        app:layout_constraintStart_toStartOf="@id/GetStarted"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:autoLink="web"
        android:textColor="@android:color/holo_blue_light"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/agency"
        app:layout_constraintStart_toStartOf="@id/agency"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>